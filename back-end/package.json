{
  "name": "back-end",
  "jest": {
    "transform": {
      "^.+\\.ts$npm": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "verbose": true
  },
  "version": "1.0.0",
  "description": "near by shop API",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest --watchAll",
    "dev": "concurrently -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon dist/server.js\"",
    "prod": "tsc && node dist/server.js"
  },
  "keywords": [],
  "author": "francisDY",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^23.3.9",
    "@types/mongoose": "^4.7.34",
    "@types/node": "^10.12.5",
    "@types/passport": "^0.4.7",
    "@types/passport-local": "^1.0.33",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "mongoose": "^4.13.11",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  }
}
